@model List<Furniture>
@{
    ViewData["Title"] = "Index";
}

    @{
        if (TempData["FileName"] != null)
        {
    <div class="alert alert-danger">@TempData["FileName"]</div>
        }
    }

    <div style="width:83%;" class="table-responsive ">
    <h5 class="d-flex" style="justify-content: center; background-color: #d1e7dd; color: #000; font-size: 20px; padding: 10px;">General Seller</h5>
    <table id="myDataTable" class="table table-bordered" style="text-align: center">
            <thead class="table table-info" style="text-align: center">
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        SKU
                    </th>
                    <th>
                        Article
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        isTrend
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Furniture furniture in Model)
                {
                    <tr class="table-light">
                        <td>
                            <img style="width:110px; height:110px"
                             src="~/assets/image/shop/@furniture.Image" />
                        </td>
                        <td>
                            @furniture.Name
                        </td>
                        <td>
                            @furniture.SKU
                        </td>
                        <td>
                            @furniture.Article.Substring(0,70)
                            .....
                        </td>
                        <td>
                            @furniture.Price
                        </td>
                        <td class="d-flex align-items-center" style="height:160px; justify-content: center; gap: 5px">
                        @if (furniture.Trend==true)
                        {
                            <div>
                                <a asp-area="Admin" asp-controller="Seller" asp-action="Trend" asp-route-id="@furniture.Id"
                                class="btn btn-outline-success"><i class="mdi mdi-heart"></i></a>
                            </div>
                        }
                        else{
                            <div>
                                <a asp-area="Admin" asp-controller="Seller" asp-action="Trend" asp-route-id="@furniture.Id"
                                class="btn btn-danger"><i class="mdi mdi-heart-broken"></i></a>
                            </div>
                        }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
     
    </div>
</div>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.4.js"
        integrity="sha256-a9jBBRygX1Bh5lt8GZjXDzyOB+bWve9EiO7tROUtj/E="
        crossorigin="anonymous"></script>
<script>
    $(document).ready(function () {
        $('#myDataTable').DataTable();
    });
</script>