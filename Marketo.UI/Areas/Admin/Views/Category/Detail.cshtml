@model Category
@inject Marketo.UI.Services.LayoutService layoutService;
@{
    ViewData["Title"] = "Detail";
}

<div class="col-lg-9">
    <h4 style="text-align:center; background-color:#71c016; color: #fff;">Category</h4>
    <hr />
    <div class="table-responsive">
        <table class="table table-bordered" style="text-align: center">
            <thead class="table table-info" style="text-align: center">
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Name
                    </th>
                   
                </tr>
            </thead>
            <tbody class="tablebtn">
                @foreach (Furniture furniture in layoutService.GetFurnitures())
                {
                   @if (furniture.CategoryId==Model.Id)
                    {
                        <tr class="table-light">
                            <td>
                                <img style="width:110px; height:110px"
                                     src="~/assets/image/shop/@furniture.Image" />
                            </td>
                            <td>
                                @furniture.Name
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    <dl class="row" style="">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

